<%= form_for(@task) do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %><br />
  </div>

  <div class="field">
    <%= f.label :details %><br />
    <%= f.text_area :details %><br />
    <small>You don't have put anything in this field.</small>
  </div>

  <div class="field">
    <%= f.label :priority %>
    <%= f.select :priority, [['Vital','Vital'],['High','High'],['Normal','Normal'], ['Low','Low']] %>
  </div>

  <div class="field">
    <p><%= f.check_box(:completed) %>
    <%= label_tag :completed, "Completed" %></p><br />
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
